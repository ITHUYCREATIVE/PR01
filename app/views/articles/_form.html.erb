<%= render 'shared/errors', obj: @article %>

<div class="row">
  <div class="col-md-12">
    <%= form_with(model: article) do |form| %>
      
      <div class="form-group row">
        <div class="col-sm-2 col-form-label">
          <%= form.label :title %>
        </div>
        <div class="col-sm-8">
          <%= form.text_field :title, id: :article_title, class: "form-control", placeholder: "Title", autofocus: true %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-2 col-form-label">
          <%= form.label :description %>
        </div>  
        <div class="col-sm-8">
          <%= form.text_area :description,rows: 10, id: :article_description, class: "form-control", placeholder: "Description", autofocus: true %>
        </div>  
      </div>

      <div class="form-group row">
        <div class="offset-sm-2 col-sm-10">
          <%= form.submit "Create", class:"btn btn-danger btn-xlarge"%>
        </div>
      </div>
    <% end %>
  </div>
</div>